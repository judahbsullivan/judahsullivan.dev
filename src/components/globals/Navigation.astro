---
import Menu from "@/ui/Menu.astro";
const links = [
  {
    name: "about",
    link: "/about",
  },
  {
    name: "blog",
    link: "/blog",
  },
  {
    name: "projects",
    link: "/projects",
  },
  {
    name: "contacts",
    link: "/contact",
  },
];
---

<header class="w-full fixed top-0 h-14 px-4 z-10">
  <div class="flex h-full justify-between w-full items-center">
    <a href="/"> judahsullivan.dev </a>
    <!-- <Menu /> -->
    <nav class="capitalize">
      {
        links.map((link) => (
          <a href={link.link} class="mx-2">
            {link.name}
          </a>
        ))
      }
    </nav>
  </div>
</header>
