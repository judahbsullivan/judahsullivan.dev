---
import Navigation from "@/globals/Navigation.astro";
import Body from "./Body.astro";
import Footer from "@/globals/Footer.astro";
import { tw } from "@/utils/tw";

interface MainProps {
  title?: string;
  description?: string;
  className?: string;
}

const { title, description, className } = Astro.props as MainProps;
---

<Body title={title}>
  <Navigation />
  <div data-barba="wrapper">
    <main data-barba="container" data-barba-namespace={title}>
      <slot />
    </main>
    <Footer />
  </div>
</Body>
